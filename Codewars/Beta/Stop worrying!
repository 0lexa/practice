//JavaScript

const worries = str => {
  switch (str) {
    case `Making last-minute changes`:
    case `Sitting in a dark room and shaking` :
    case `Crying` :
    case `Laughing hysterically` :
    case `Not eating` :
      return `Stop worrying, everything will be all right!`;
    default :
      return `Do you really care?`;
  }
};
