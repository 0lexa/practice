//JavaScript

const likes = names =>
  names.length < 1 ? `no one likes this` :
    names.length < 2 ? `${names[0]} likes this` :
      names.length < 3 ? `${names[0]} and ${names[1]} like this` :
        names.length < 4 ? `${names[0]}, ${names[1]} and ${names[2]} like this` :
          `${names[0]}, ${names[1]} and ${names.length - 2} others like this`;
