//JavaScript

const typeOfTriangle = (...args) =>
  ((a, b, c) => !(a * b * c) || a + b <= c ? `Not a valid triangle` : a === b && b === c ? `Equilateral` : a === b || b === c || a === c ? `Isosceles` : `Scalene`)
  (...args.sort((a, b) => a - b));
