//JavaScript

const taxCalculator = total =>
  +Number.isFinite(total) && Math.round((total <= 0 ? 0 : total <= 10 ? total * 0.1 : total <= 20 ? 1 + (total - 10) * 0.07 : total <= 30 ? 1.7 + (total - 20) * 0.05 : 2.2 + (total - 30) * 0.03) * 1e2) / 1e2;
