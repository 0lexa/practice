//JavaScript

const digitsProduct = product => {
  let result = ``;
  if (product < 10) return product > 0 ? product : 10;
  for (let i = 9; i > 1; i--) {
    while (product % i === 0) {
      product /= i;
      result = i + result;
    }
  }
  return product !== 1 ? -1 : +result;
};
