//JavaScript

function reverseInParentheses(inputString) {
  if (inputString.match(/\([a-z]*\)/)) {
    return reverseInParentheses(
      inputString.replace(/\([a-z]*\)/, [...inputString.match(/\([a-z]*\)/)[0].replace(/[()]/g, ``)]
        .reverse()
        .join(``)
      )
    );
  } else return inputString;
}
