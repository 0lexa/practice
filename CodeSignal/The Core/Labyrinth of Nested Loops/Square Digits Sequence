//JavaScript

const squareDigitsSequence = (a, seq = []) =>
  (
    seq.push(a),
    a = [...String(a)].reduce((pre, val) => pre + val ** 2, 0),
    seq.includes(a) ? ++seq.length : squareDigitsSequence(a, seq)
  );
