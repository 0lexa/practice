//JavaScript

const arrayConversion = (arr, flag = 0) =>
  arr.length > 1 ? arrayConversion(arr.reduce((pre, val, idx) => (idx % 2 && pre.push(flag ? arr[idx - 1] * arr[idx] : arr[idx - 1] + arr[idx]), pre), []), !flag) : arr[0];
